#include <iostream>
#include <conio.h>
#include <windows.h>

using namespace std;

// Function to set the cursor position in the console window
void gotoxy(int x, int y) {
    COORD c;
    c.X = x;
    c.Y = y;
    SetConsoleCursorPosition(GetStdHandle(STD_OUTPUT_HANDLE), c);
}
int main()
{
